<%= @movie.title %>
<%= @movie.creation_year %>
<%= @movie.genre %><br>
<% @movie.actors.order_by_age.each do |actor| %>
<%= actor.name %>
<%= actor.age %><br>
<%end%>
<div id="average age of actors">
  <h2><%= @movie.actors.average_age %></h2>
</div>

<%= form_with url: "/movies/#{@movie.id}", method: :patch, data: {turbo: false} do |f| %>
  <%= f.label :actor_id, "Add Actor(tress) ID:" %><br>
  <%= f.number_field :actor_id %><br>
  <%= f.submit "Submit Actor ID" %>
<% end %>